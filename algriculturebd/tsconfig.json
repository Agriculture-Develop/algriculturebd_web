{
  "compilerOptions": {
    // 基础配置
    "target": "ES2020",
    "jsx": "preserve",
    "lib": ["ES2020", "DOM", "DOM.Iterable"], // 完整的 DOM 类型支持
    "useDefineForClassFields": true,

    // 路径别名（保持原有配置）
    "baseUrl": ".",
    "module": "ESNext", // 解决 import.meta.env 报错
    "moduleResolution": "bundler", // 适配 Vite 模块解析
    "paths": {
      "@/*": ["src/*"],
      "#/*": ["./types/*"]
    },

    "resolveJsonModule": true,
    // 模块解析相关
    "allowImportingTsExtensions": true,

    // 类型检查（根据项目需求调整严格程度）
    "strict": false,
    "noFallthroughCasesInSwitch": false,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, // 跳过第三方库类型检查
    // 关键：解决 esModuleInterop 报错
    "esModuleInterop": true,
    "noUnusedParameters": false,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ]
}
